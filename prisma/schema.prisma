generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ProductScope {
  GLOBAL
  USER
}

enum ProductStatus {
  VERIFIED
  PENDING_REVIEW
}

enum ProductSource {
  INTERNAL
  FATSECRET
  AI_ESTIMATED
}

model Product {
  id             String        @id @default(cuid())
  name           String
  brand          String?
  normalizedName String
  scope          ProductScope
  status         ProductStatus
  ownerUserId    String?
  source         ProductSource
  kcal100        Int
  protein100     Float
  fat100         Float
  carbs100       Float
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  @@index([normalizedName])
}
