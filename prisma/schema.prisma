generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ProductScope {
  GLOBAL
  USER
}

enum ProductStatus {
  VERIFIED
  PENDING_REVIEW
}

enum ProductSource {
  INTERNAL
  FATSECRET
  AI_ESTIMATED
}

enum RecipeStatus {
  DRAFT
  PUBLISHED
}

enum RecipeVisibility {
  PRIVATE
  PUBLIC
}

enum Sex {
  FEMALE
  MALE
}

enum ActivityLevel {
  SEDENTARY
  LIGHT
  MODERATE
  VERY_ACTIVE
}

enum GoalType {
  MAINTAIN
  LOSE
  GAIN
}

model User {
  id         String       @id @default(cuid())
  externalId String       @unique
  createdAt  DateTime     @default(now())
  profile    UserProfile?
}

model UserProfile {
  id            String         @id @default(cuid())
  userId        String         @unique
  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)

  firstName     String?
  lastName      String?

  sex           Sex?
  birthDate     DateTime?
  heightCm      Int?
  weightKg      Float?
  activityLevel ActivityLevel?
  goal          GoalType?      @default(MAINTAIN)

  targetCalories Int?
  targetProteinG Int?
  targetFatG     Int?
  targetCarbsG   Int?

  calorieDelta  Int?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
}

model Product {
  id             String        @id @default(cuid())
  name           String
  brand          String?
  normalizedName String
  scope          ProductScope
  status         ProductStatus
  ownerUserId    String?
  source         ProductSource
  kcal100        Int
  protein100     Float
  fat100         Float
  carbs100       Float
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  recipeDraftIngredients RecipeDraftIngredient[]
  recipeIngredients      RecipeIngredient[]

  @@index([normalizedName])
}

model RecipeDraft {
  id          String       @id @default(cuid())
  ownerUserId String?
  title       String
  category    String?
  description String?
  servings    Int?
  status      RecipeStatus @default(DRAFT)
  sourceRecipeId String?

  ingredients RecipeDraftIngredient[]
  steps       RecipeDraftStep[]
  sourceRecipe Recipe? @relation("RecipeDraftSource", fields: [sourceRecipeId], references: [id])

  nutritionTotal      Json?
  nutritionPerServing Json?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model RecipeDraftIngredient {
  id           String      @id @default(cuid())
  draftId      String
  draft        RecipeDraft @relation(fields: [draftId], references: [id], onDelete: Cascade)

  order        Int
  originalText String?
  name         String
  amount       Float?
  unit         String?

  productId   String?
  product     Product? @relation(fields: [productId], references: [id])

  kcal100     Float?
  protein100  Float?
  fat100      Float?
  carbs100    Float?

  assumptions Json?
  createdAt   DateTime @default(now())

  @@unique([draftId, order])
}

model RecipeDraftStep {
  id      String      @id @default(cuid())
  draftId String
  draft   RecipeDraft @relation(fields: [draftId], references: [id], onDelete: Cascade)

  order   Int
  text    String
}

model Recipe {
  id          String           @id @default(cuid())
  ownerUserId String?
  title       String
  category    String?
  description String?
  servings    Int?
  visibility  RecipeVisibility @default(PRIVATE)

  ingredients RecipeIngredient[]
  steps       RecipeStep[]
  drafts      RecipeDraft[] @relation("RecipeDraftSource")

  nutritionTotal      Json?
  nutritionPerServing Json?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model RecipeIngredient {
  id           String  @id @default(cuid())
  recipeId     String
  recipe       Recipe  @relation(fields: [recipeId], references: [id], onDelete: Cascade)

  order        Int?
  originalText String?
  name         String
  amount       Float?
  unit         String?

  productId   String?
  product     Product? @relation(fields: [productId], references: [id])

  kcal100     Float?
  protein100  Float?
  fat100      Float?
  carbs100    Float?
  assumptions Json?

  nutritionTotal      Json?
  nutritionPerServing Json?
}

model RecipeStep {
  id       String @id @default(cuid())
  recipeId String
  recipe   Recipe @relation(fields: [recipeId], references: [id], onDelete: Cascade)

  order    Int
  text     String
}

model IdempotencyKey {
  id        String   @id @default(cuid())
  key       String
  operation String
  entityId  String?
  result    Json?
  createdAt DateTime @default(now())

  @@unique([operation, key, entityId])
}
